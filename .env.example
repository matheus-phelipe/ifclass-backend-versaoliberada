# Configurações de Banco de Dados
DB_URL=jdbc:postgresql://localhost:5432/ifclass
DB_USERNAME=postgres
DB_PASSWORD=postgres

# Configurações JWT
# Gere uma chave segura com: openssl rand -base64 64
JWT_SECRET=your-super-secure-jwt-secret-key-here-base64-encoded
JWT_EXPIRATION=86400000

# Configurações de Email
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Configurações de Ambiente
SPRING_PROFILES_ACTIVE=dev

# Configurações de Segurança
CORS_ALLOWED_ORIGINS=http://localhost:4200,https://yourdomain.com

# Configurações de Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Configurações de Logs
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_SECURITY=INFO
LOG_LEVEL_SQL=DEBUG
